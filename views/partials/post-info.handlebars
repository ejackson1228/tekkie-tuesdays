<article class="post">
    <div class="title">
        <a href="{{article_url}}" target="_blank">{{title}}</a>
        <span>{{article_url}}</span>
    </div>
    <div class="meta">
        {{vote_count}} vote(s) by {{user.username}} on {{created_at}}

        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>